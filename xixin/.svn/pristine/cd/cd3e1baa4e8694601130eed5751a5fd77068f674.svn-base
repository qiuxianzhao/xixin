/***** figure start*****/
.figure{
		width:100%;
}
.figure img{
	width: 100%;
}
.login select{
	position: absolute;
	width: 50px;
	border: 0px;
	color: #999999;
	top: -1px;
	left: 1px;
}
/*主题内容*/
.tab{
	width:100%;
	height:1483px;
}
.tab_son{
	width:1000px;
	margin:0 auto;
	height: 1350px;
	color:#c7c7c7;
	border-bottom: 1px solid #d8d8d8;
}
.tab_son h1{
	height:60px;
	line-height:70px;
	border-bottom:1px solid #41ccf3;	
}
.tab .tab_son h1 a{
	height: 30px;
	margin: 0 3px;
	font-size: 14px;
	color:#c7c7c7;
}
.article {
	height:1290px;
	text-align: center;
}
.article h2{
	height: 32px;
	font-size: 18px;
	color: #333333;
	padding-top: 27px;
}
.article .content1{
	width: 740px;
	margin: 0 auto;
	height: 1199px;
	font-size: 14px;
	color: #7a7a7a;
	margin-top: 15px;

}
.article .content1 p{
	line-height: 20px;
	text-align: left;
	margin:5px 0;
}
.article .content1 .text_one{
	text-indent: 3em;
}
.article .content1 .text_two{
	height: 55px;
	line-height: 31px;
	overflow:hidden;
}
.article .content1 .text_two span{
	display: block;
	width: 78px;
	height: 26px;
	border: 1px solid #d8d8d8;
	background-color: white;
	text-align: center;
	cursor: pointer;
	float: right;
}
.article .content1 .text_two span img{
	margin: 0 5px;
}
.clear{
	clear: both;
}
.footer{
	width: 740px;
	margin: 0 auto;
	font-size: 14px;
	text-align: left;
}
.footer p{
	margin: 7px 0;
}
.footer p a{
	color: #999999;
}
.footer p a:hover{
	text-decoration: underline;
	color: #41ccf3;
}
