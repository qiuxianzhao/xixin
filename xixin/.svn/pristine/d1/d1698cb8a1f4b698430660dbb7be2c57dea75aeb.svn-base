/*基础网站*/
.position{
	width: 1000px;
	margin: 0 auto;
}
.position a{
	color: #b4b4b4;
	height: 45px;
	line-height: 45px;
}
.base_top{
	width: 1000px;
	margin: 0 auto;
	border-bottom: 1px solid #41ccf3;
	height: 35px;
}
.base_text{
	font-size: 18px;
	font-weight: bold;
	width: 85px;
	height: 35px;
	line-height: 35px;
	text-align: center;
}
.base_text2{
	color: gray;
	width: 85px;
	height: 35px;
	line-height: 35px;
	text-align: center;
}
.base_right{	
	border: 1px solid #d8d8d8;
	border-bottom: 0;
	float: right;
}
.base_right a{
	display: inline-block;
	font-size: 14px;
	width: 85px;
	height: 31px;
	line-height: 31px;
	text-align: center;
	color: gray;
	border: 1px solid white;
	border-top: 3px solid white;
	border-bottom: 0;
}
.base_right .base_but{
	border: 1px solid #41ccf3;
	border-top: 3px solid #41ccf3;
	border-bottom: 0;
	color: #41ccf3;
}
.base_right a:hover{
	border: 1px solid #41ccf3;
	border-top: 3px solid #41ccf3;
	border-bottom: 0;
	color: #41ccf3;
}
.base_left{
	width: 200px;
	height: 35px;
	line-height: 35px;
	text-align: left;
	float: left;
}
.base{
	width: 1000px;
	margin: 0 auto;
	padding-top: 30px;
	background: #f5f5f5;
}
.base_img{
	text-align: center;
}
.base_img span{
	display: inline-block;
	border: 1px solid #f5f5f5;
}
.base_img span:hover{
	border: 1px solid #41ccf3;
}
.base_img_middle{
	margin: 0 20px 0;
}
.base_img_text {
	width: 1000px;
}
.base_img_text span{
	display: inline-block;
	height: 30px;
	line-height: 30px;
	width: 330px;
	font-size: 14px;
	color: gray;
	text-align: center;
}
.base_foot{
	width: 1000px;
	height: 100px;
	line-height: 100px;
	margin: 0 auto;
}
.base_foot_text{
	float: right;
}
.base_foot_text a{
	display: inline-block;
	height: 40px;
	width: 35px;
	line-height: 40px;
	text-align: center;
	color: gray;
	border: 1px solid gray;
	margin-left: -4px;
}
.base_foot_text a:hover,.base_foot_text span:hover{
	color: red;
}
.base_foot_text span{
	display: inline-block;
	height: 40px;
	width: 85px;
	line-height: 40px;
	text-align: center;
	color: gray;
	border: 1px solid gray;
	margin-left: -4px;
}
.base_foot_text  .base_border{
	border: 0px;
	display: inline-block;
	height: 40px;
	width: 85px;
	line-height: 40px;
	text-align: center;
	color: gray;
	margin-left: -4px;
}
.base_foot_text  .base_border1{
	border: 0px;
	display: inline-block;
	height: 40px;
	width: 35px;
	line-height: 40px;
	text-align: center;
	color: gray;
	margin-left: -4px;
}
.base_color{
	background: #f5f5f5;
}
.box{
	display: none;
}
.box_now{
	display: block;
}
/*基础网站*/