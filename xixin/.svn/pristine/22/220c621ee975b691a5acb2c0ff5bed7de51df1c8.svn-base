/*优秀案例*/
.base_top{
	width: 1000px;
	margin: 70px auto 0;
	height: 35px;
}
.base_text{
	font-size: 18px;
	font-weight: bold;
	width: 85px;
	height: 35px;
	line-height: 35px;
	text-align: center;
}
.base_text2{
	color: gray;
	width: 85px;
	height: 35px;
	line-height: 35px;
	text-align: center;
}
.base_right{	
	border-bottom: 0;
	float: right;
}
.base_right a{
	display: inline-block;
	font-size: 14px;
	width: 85px;
	height: 33px;
	line-height: 33px;
	text-align: center;
	color: gray;
	border: 1px solid #d8d8d8;
	border-radius: 20px ;
}
.base_right a:hover{
	background: #41ccf3;
	border-bottom: 0;
	color: white;
}
.base_left{
	width: 200px;
	height: 35px;
	line-height: 35px;
	text-align: left;
	float: left;
}
.base{
	width: 1000px;
	margin: 0 auto;
	padding-top: 30px;
}
.base_img{
		width: 1000px;
		margin: 0 auto;
		margin-top: 15px;
		margin-bottom: 80px;

}
.base_img span{
	display: inline-block;
	border:1px solid  white;
	padding: 5px;
}
.base_img span:hover {
	border:1px solid  #41ccf3;
}
.base_img_left{
	float: left;
}
.base_img_left img{
	width: 488px;
	height: 330px;
}
.base_img_right{
	float: left;
      margin-left: 40px;
}
.base_img_right1{
	padding-bottom: 10px;
}
.base_right .base_but{
	background: #41ccf3;
	color: white;
}
.box{
	display: none;
}
.base_img_box{
		display:block;	
}
/*优秀案例*/

/*新闻动态*/
.news{
	background: #f5f5f5;
	padding-top: 1px;
	margin-bottom: 70px;
}
.news_right{
	width: 85px;
	height: 35px;
	line-height: 35px;
	text-align: center;
	float: right;
}
.news_right a{
		color: gray;
}
.news_right a:hover{
		color: red;
}
.news_img{
	width: 1000px;
	margin: 20px auto 0;
}
.news_img span{
	display: inline-block;
	margin-right: 7px;
}
.news_img_text{
	width: 1000px;
	margin: 8px auto 0;
	padding-bottom: 50px;
}
.news_img_text span{
	display: inline-block;
	font-size: 14px;
	color: gray;
	width: 300px;
	height: 40px;
	line-height: 40px;
	margin-left: 35px;
}
.news_img_text .news_img_text2{
	margin: 0;
}
